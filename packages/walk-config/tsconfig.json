{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",
    "types": ["vite/client"],
    "strict": true,
    "baseUrl": "./",
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "rootDir": ".",
    "declarationDir": "dist/types",
    "moduleResolution": "bundler",
    "noImplicitOverride": true
  },
  "include": ["src"],
  "exclude": ["**/node_modules"]
}
