{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "strict": true,
    "baseUrl": "./",
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "rootDir": ".",
    "declarationDir": "dist/types",
    "moduleResolution": "bundler",
    "noImplicitOverride": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "__test__"],
  "exclude": ["**/node_modules"]
}
